    // so, ignore inserts from the CLI and just use update
    if (!_in_drush()) {
      _node_update_and_insert($node);
    }
  }
  
  /**
   * Callback for drupal_register_shutdown_function()
   */
  function gb_maillist_node_post_update() {
    db_query('ALTER IGNORE TABLE forum_index' .
        ' ADD UNIQUE INDEX dupidx (nid, tid, created)');
    db_query('ALTER TABLE forum_index DROP INDEX dupidx');
  }
  
  /**
   * Implements hook_node_update()
   */
  function gb_maillist_node_update($node) {
    // Forums have a bug where the forum_index row is getting inserted again
    // after an update causing duplicate rows to show.
    // We need to remove the duplicates AFTER the node update query
    // so we register a shutdown function.
    if ($node->type == 'forum') {
      drupal_register_shutdown_function('gb_maillist_node_post_update');
    }       
    
    _node_update_and_insert($node);
  }
  
